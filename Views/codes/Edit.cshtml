@model eye_nobat.Models.code

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div id="myNavRight" class="overlayRight">
    <div class="overlay-contentRight">
        <div class="card">
            <div class="card-header text-white bg-primary">
                ویرایش کد خطا
            </div>
            <div class="card-body">
                <hr />
                <form asp-action="Edit">
                    <div class="row">
                        <div class="col-md-3">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="id" />
                            <div class="form-group">
                                <label asp-for="name" class="control-label"></label>
                                <textarea required cols="10" rows="5" class="form-control" asp-for="name"></textarea>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="num" class="control-label"></label>
                                <input required asp-for="num" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="sms" class="control-label"></label>
                                @if (Model.sms == true)
                                {
                                    <input name="sms" type="checkbox" checked  />
                                }
                                else
                                {
                                    <input name="sms" type="checkbox" />
                                }

                            </div>
                        </div>
                        <div>
                            <hr />
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bx bx-edit"></i>
                                    ویرایش اطلاعات
                                </button>
                                <a onclick="history.back()" class="btn btn-outline-primary">
                                    <i class="bx bxs-left-arrow" aria-hidden="true"></i>
                                    <span>انصراف و بازگشت</span>
                                </a>
                            </div>
                        </div>

                    </div>

                </form>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            document.getElementById("myNavRight").style.width = "100%";
        });


        function back() {
            document.getElementById("myNavRight").style.transform = "scale(0)";
            setTimeout(function () {
                window.location.href = "/codes/Index";
            }, 2000);
        }
    </script>
}
