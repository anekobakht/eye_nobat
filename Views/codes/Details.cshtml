@model eye_nobat.Models.code

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div id="myNavTop" class="overlayTop">
    <div class="overlay-contentTop">
        <div class="card">
            <div class="card-header text-white bg-primary">
                جزئیات
            </div>
            <div class="card-body">
                <div>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.name)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.name)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.num)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.num)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.sms)
                        </dt>
                        <dd class="col-sm-10">
                            @if (Model.sms == true)
                            {
                                <input type="checkbox" checked disabled />
                            }
                            else
                            {
                                <input type="checkbox" disabled />
                            }
                        </dd>
                    </dl>
                </div>
                <div>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.id">
                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                        ویرایش اطلاعات
                    </a>
                    <a onclick="history.back()" class="btn btn-outline-primary">
                        <i class="bx bxs-left-arrow" aria-hidden="true"></i>
                        <span>انصراف و بازگشت</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById("index").style.transform = "scale(1)";
    </script>


    <script>
        $(document).ready(function () {
            document.getElementById('myNavTop').style.height = '100%';
        });


        function back() {
            document.getElementById('myNavTop').style.height = '0';
            setTimeout(function () {
                window.location.href = "/codes/Index";
            }, 2000);
        }
    </script>
}

