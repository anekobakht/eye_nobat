@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById("index").style.transform = "scale(1)";
    </script>


    <script>
        $(document).ready(function () {
            document.getElementById("myNavRight").style.width = "100%";
        });


        function back() {
            document.getElementById("myNavRight").style.transform = "scale(0)";
            setTimeout(function () {
                window.location.href = "/codes/Index";
            }, 2000);
        }
    </script>
}
