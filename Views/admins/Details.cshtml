@model eye_nobat.Models.admin

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<environment names="Development">
    <script src="/_framework/aspnetcore-browser-refresh.js"></script>
</environment>

<div id="myNavTop" class="overlayTop">
    <div class="overlay-contentTop">
        <div class="card">
            <div class="card-header text-white bg-primary">
                جزئیات
            </div>
            <div class="card-body">
                <div>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            <i class="bx bxs-user"></i>
                            @Html.DisplayNameFor(model => model.flname)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.flname)
                        </dd>
                        <dt class="col-sm-2">
                            <i class="bx bxs-user-detail"></i>
                            @Html.DisplayNameFor(model => model.uname)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.uname)
                        </dd>
                    </dl>
                </div>
                <div>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.id">
                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                        ویرایش اطلاعات
                    </a>
                    <a onclick="history.back()" class="btn btn-outline-primary">
                        <i class="bx bxs-left-arrow" aria-hidden="true"></i>
                        <span>انصراف و بازگشت</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById("index").style.transform = "scale(1)";
    </script>


    <script>
        $(document).ready(function () {
            document.getElementById('myNavTop').style.height = '100%';
        });


        function back() {
            document.getElementById('myNavTop').style.height = '0';
            setTimeout(function () {
                window.location.href = "/admins/Index";
            }, 2000);
        }
    </script>
}
