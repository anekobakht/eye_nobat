@model eye_nobat.Models.never

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<environment names="Development">
    <script src="/_framework/aspnetcore-browser-refresh.js"></script>
</environment>
<div id="myNavRight" class="overlayRight">
    <div class="overlay-contentRight">
        <div class="card">
            <div class="card-header text-white bg-primary text-white">
                جستجوی خطای ثبت شده
            </div>
            <div class="card-body">
                <form asp-action="searched">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label  class="control-label">عنوان خطا</label>
                                <select name="code_id" asp-for="code_id" class="form-control" asp-items="ViewBag.code_id">
                                    <option value=null></option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="flname" class="control-label"></label>
                                <input placeholder="نام و نام خانوادگی" name="flname"  asp-for="flname" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="codemeli" class="control-label"></label>
                                <input placeholder="کد ملی" name="codemeli"  type="number" maxlength="10" asp-for="codemeli" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="sen" class="control-label"></label>
                                <input placeholder="سن" name="sen" maxlength="3"  type="number" asp-for="sen" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label  class="control-label">جنسیت</label>
                                <select name="jensiat_id" asp-for="jensiat_id" class="form-control" asp-items="ViewBag.jensiat_id">
                                    <option value=null></option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="date_morajee" class="control-label"></label>
                                <input placeholder="تاریخ مراجعه" name="date_morajee" id="date_morajee" asp-for="date_morajee" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="saat_morajee" class="control-label"></label>
                                <input placeholder="ساعت مراجعه" name="saat_morajee" id="saat_morajee" asp-for="saat_morajee" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="date_voghu" class="control-label"></label>
                                <input placeholder="تاریخ وقوع" name="date_voghu" id="date_voghu" asp-for="date_voghu" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="saat_voghu" class="control-label"></label>
                                <input placeholder="ساعت وقوع" name="saat_voghu" id="saat_voghu" asp-for="saat_voghu" class="form-control" />
                            </div>
                        </div>
                       <div>
                           <hr />
                       </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-search" aria-hidden="true"></i>
                                    جستجوی خطاهای ثبت شده
                                </button>
                                <a onclick="history.back()" class="btn btn-outline-primary">
                                    <i class="fa fa-arrow-circle-o-left" aria-hidden="true"></i>
                                    <span>انصراف و بازگشت</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.getElementById("myNavRight").style.width = "100%";
        $("#date_morajee").inputmask("9999/99/99");
        $("#saat_morajee").inputmask("99:99");
        $("#date_voghu").inputmask("9999/99/99");
        $("#saat_voghu").inputmask("99:99");
        function back() {
            document.getElementById("myNavRight").style.width = "0";
            setTimeout(function () {
                window.location.href = "/admins/dashboard";
            }, 2000);
        }

    </script>
}
