@model IEnumerable<eye_nobat.Models.never>

@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}


@*%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% create*@
<div id="myNavRight" class="overlayRight">
    <div class="overlay-contentRight">
        <div class="card">
            <div class="card-header text-white bg-primary">
                ثبت خطای جدید
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div class="row">
                        <div class="col-md-3">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label class="control-label">عنوان بخش</label>
                                <select name="bakhsh_id" class="form-control" asp-items="ViewBag.bakhsh_id"></select>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label">عنوان خطا</label>
                              @*  <input type="radio" name="code_id" class="form-control" asp-items="ViewBag.code_id"/>*@
                                <select name="code_id" class="form-control" asp-items="ViewBag.code_id"></select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label">نام و نام خانوادگی</label>
                                <input placeholder="نام و نام خانوادگی" required name="flname" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label">کد ملی</label>
                                <input placeholder="کد ملی" required type="number" maxlength="10" name="codemeli" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label">سن</label>
                                <input placeholder="سن" maxlength="3" required type="number" name="sen" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label">جنسیت</label>
                                <select name="jensiat_id" class="form-control" asp-items="ViewBag.jensiat_id"></select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label">تاریخ مراجعه</label>
                                <input placeholder="تاریخ مراجعه" required id="date_morajee" name="date_morajee" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label">ساعت مراجعه</label>
                                <input placeholder="ساعت مراجعه" required id="saat_morajee" name="saat_morajee" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label">تاریخ وقوع</label>
                                <input placeholder="تاریخ وقوع" required id="date_voghu" name="date_voghu" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label">ساعت وقوع</label>
                                <input placeholder="ساعت وقوع" required id="saat_voghu" name="saat_voghu" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label">توضیحات</label>
                                <textarea placeholder="توضیحات" name="tozihat" class="form-control" cols="4" rows="4"></textarea>
                            </div>
                        </div>
                        <div>
                            <hr />
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary text-white">
                                    ثبت اطلاعات
                                </button>
                                <a onclick="history.back()" class="btn btn-outline-primary">
                                    <span>انصراف و بازگشت</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@*%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% create*@
@*%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% Index*@


<div class="card" id="index" style="transform:scale(1)">
    <div class="table-responsive table-bordered">
        <div class="table-wrapper">
            <div class="card-header text-white bg-primary">
                <div class="row">
                    <div class="col-sm-12 bg-primary text-white" style="text-align:center">
                        خطاهای ثبت شده
                    </div>
                </div>
            </div>


            <table id="dataTableExample" class="table">
                <thead>
                    <tr>

                        <th>
                            @Html.DisplayNameFor(model => model.bakhsh.name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.code.name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.flname)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.codemeli)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.sen)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.jensiat.name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.date_morajee)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.saat_morajee)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.date_voghu)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.saat_voghu)
                        </th>

                        <th>
                            <i class="fa fa-cogs" aria-hidden="true"></i>
                            عملیات
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.bakhsh.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.code.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.flname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.codemeli)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.sen)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.jensiat.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.date_morajee)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.saat_morajee)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.date_voghu)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.saat_voghu)
                            </td>

                            <td>
                                <div class="dropdown">
                                    <button class="btn btn-link font-size-16 shadow-none py-0 text-muted dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bx bx-dots-horizontal-rounded"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end" style="">
                                        <li>
                                            <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.id">
                                                <i class="bx bx-edit"></i>
                                                ویرایش
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-action="Details" asp-route-id="@item.id">
                                                <i class="bx bx-zoom-in"></i>
                                                جزئیات
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-action="Delete" asp-route-id="@item.id">
                                                <i class="bx bxs-trash"></i>
                                                حذف
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-action="Index" asp-controller="peyvasts" asp-route-id="@item.id">
                                                <i class="bx bx-link"></i>
                                                پیوست
                                            </a>
                                        </li>
                                    </ul>
                                </div>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.getElementById("index").style.transform = "scale(1)";
        function create() {
            document.getElementById("index").style.transform = "scale(0)";
            setTimeout(function () {
                window.location.href = "/nevers/Create";
            }, 2000);
        }
        function edit() {
            document.getElementById("index").style.transform = "scale(0)";
            setTimeout(function () {
                var param = document.getElementById("edit").title;
                window.location.href = "/nevers/Edit/" + param;
            }, 2000);
        }

    </script>
    <script>
        $("#date_morajee").inputmask("9999/99/99");
        $("#saat_morajee").inputmask("99:99");
        $("#date_voghu").inputmask("9999/99/99");
        $("#saat_voghu").inputmask("99:99");
    </script>
}
