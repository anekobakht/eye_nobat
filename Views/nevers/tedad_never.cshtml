@model IEnumerable<eye_nobat.Models.never>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<environment names="Development">
    <script src="/_framework/aspnetcore-browser-refresh.js"></script>
</environment>
<div class="card" id="index" style="transform:scale(0)">
    <div class="table-responsive table-bordered">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <a asp-action="" class="btn btn-primary">
                            <i class="fa fa-file-excel-o" aria-hidden="true"></i>
                            <span>انتقال به اکسل</span>
                        </a>
                        <a onclick="history.back()" class="btn btn-info">
                            <i class="fa fa-arrow-circle-left" aria-hidden="true"></i>
                            <span>انصراف و بازگشت</span>
                        </a>
                    </div>
                    <div class="col-sm-6 text_header">
                        تعداد خطاهای ثبت شده
                    </div>
                </div>
            </div>


            <table id="dataTableExample" class="table">
                <thead>
                    <tr>

                        <th>
                            @Html.DisplayNameFor(model => model.bakhsh.name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.code.name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.flname)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.codemeli)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.sen)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.jensiat.name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.date_morajee)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.saat_morajee)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.date_voghu)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.saat_voghu)
                        </th>

                       
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.bakhsh.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.code.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.flname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.codemeli)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.sen)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.jensiat.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.date_morajee)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.saat_morajee)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.date_voghu)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.saat_voghu)
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.getElementById("index").style.transform = "scale(1)";
        function back() {
            document.getElementById("index").style.transform = "scale(0)";
            setTimeout(function () {
                window.location.href = "/nevers/tedad_paye";
            }, 2000);
        }
    </script>
}
