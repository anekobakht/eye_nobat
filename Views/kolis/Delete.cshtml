@model eye_nobat.Models.koli

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<environment names="Development">
    <script src="/_framework/aspnetcore-browser-refresh.js"></script>
</environment>

<div id="myNavRight" class="overlayRight">
    <div class="overlay-contentRight">
        <div class="card">
            <div class="card-header text-white bg-primary">
                آیا مایل به حذف اطلاعات می باشید؟
            </div>
            <div class="card-body">
                <div>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.flname)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.flname)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.name_hos)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.name_hos)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.date_vorud)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.date_vorud)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.saat_vorud)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.saat_vorud)
                        </dd>
                        <dt class="col-sm-2">

                            @Html.DisplayNameFor(model => model.moshahede)
                        </dt>
                        <dd class="col-sm-10">
                            @if (Model.moshahede == true)
                            {
                                <input disabled type="checkbox" checked />
                            }
                            else
                            {
                                <input disabled type="checkbox" />
                            }
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ejra)
                        </dt>
                        <dd class="col-sm-10">
                            @if (Model.ejra == true)
                            {
                                <input disabled type="checkbox" checked />
                            }
                            else
                            {
                                <input disabled type="checkbox" />
                            }
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.etmam)
                        </dt>
                        <dd class="col-sm-10">
                            @if (Model.etmam == true)
                            {
                                <input disabled type="checkbox" checked />
                            }
                            else
                            {
                                <input disabled type="checkbox" />
                            }
                        </dd>
                    </dl>
                    <div>
                        <hr />
                    </div>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="id" />
                        <button type="submit" class="btn btn-danger text-white">
                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                            حذف اطلاعات
                        </button>
                        <a onclick="history.back()" class="btn btn-outline-primary">
                            <i class="fa fa-arrow-circle-o-left" aria-hidden="true"></i>
                            <span>انصراف و بازگشت</span>
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


